    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile Menu Toggle
            const menuToggle = document.getElementById('menu-toggle');
            const mainNav = document.getElementById('main-nav');
            menuToggle.addEventListener('click', () => {
                mainNav.classList.toggle('active');
            });

            // --- Enhanced Tax Calculator Logic ---
            const salesExInput = document.getElementById('sales-exclusive');
            const taxInput = document.getElementById('tax-amount');
            const salesInInput = document.getElementById('sales-inclusive');
            const corpTaxResult = document.getElementById('corp-tax-result');

            let isCalculating = false;

            function formatNumber(num) {
                 // Use toLocaleString to add commas
                return num.toLocaleString('en-US', { maximumFractionDigits: 0 });
            }
            
            function cleanNumber(value) {
                // Remove commas for calculation
                return parseFloat(String(value).replace(/,/g, '')) || 0;
            }

            function calculateAll(sourceElement) {
                if (isCalculating) return;
                isCalculating = true;

                const sourceId = sourceElement.id;
                let salesEx = cleanNumber(salesExInput.value);
                
                if (sourceId === 'sales-exclusive') {
                    // Value from sales-exclusive input
                } else if (sourceId === 'tax-amount') {
                    salesEx = cleanNumber(taxInput.value) / 0.05;
                } else if (sourceId === 'sales-inclusive') {
                    salesEx = cleanNumber(salesInInput.value) / 1.05;
                }

                const tax = salesEx * 0.05;
                const salesIn = salesEx * 1.05;
                const corpTax = salesEx * 0.06 * 0.20;

                // Update values, avoiding update on the source element to prevent cursor jump
                if (sourceId !== 'sales-exclusive') salesExInput.value = formatNumber(Math.round(salesEx));
                if (sourceId !== 'tax-amount') taxInput.value = formatNumber(Math.round(tax));
                if (sourceId !== 'sales-inclusive') salesInInput.value = formatNumber(Math.round(salesIn));
                corpTaxResult.textContent = formatNumber(Math.round(corpTax));

                isCalculating = false;
            }
            
            [salesExInput, taxInput, salesInInput].forEach(input => {
                input.addEventListener('input', function() {
                    calculateAll(this);
                });
                
                input.addEventListener('focus', function() {
                   // When user focuses, remove commas for easier editing
                   this.value = cleanNumber(this.value) === 0 ? '' : cleanNumber(this.value);
                });

                input.addEventListener('blur', function() {
                    // When user leaves, format the number with commas
                    const numValue = cleanNumber(this.value);
                    this.value = formatNumber(numValue);
                    // Recalculate everything based on the final blurred value to ensure consistency
                    calculateAll(this);
                });
            });


            // Interactive FAQ
            const faqData = {
                general: [
                    { q: 'Thủ tục cần chuẩn bị giấy tờ gì?', a: 'Giấy tờ cần chuẩn bị bao gồm giấy tờ, kinh nghiệm cá nhân và quan trọng nhất là bản kế hoạch kinh doanh thuyết phục và xứng đáng để được bộ kinh tế cấp phép mở công ty. Tuy nhiên, các thủ tục giấy tờ bên công ty đều hỗ trợ, nên không cần lo lắng. Chỉ cần phối hợp để làm là được.' },
                    { q: 'Có khó không?', a: 'Không khó, những không đảm bảo 100% thông qua, vì phải phụ thuộc vào nền tảng, kinh nghiêm, kế hoạch kinh doanh và số vốn đầu tư của mỗi người. Loại hình công ty cũng rất quan trọng, nên mở các dạng ngành nghề hot hiện nay, ví du: Công ty marketing, cố vấn ….' },
                    { q: 'Có tự làm được không?', a: 'Qui trình làm khá phức tạp và nhiều giấy tờ cần chuẩn bị, tự làm sẽ mất rất nhiều thời gian và khả năng qua không cao.' },
                    { q: 'Chi phí hết bao nhiêu?', a: 'Chi phí tuỳ thuộc vào nền tảng của mỗi cá nhân. Ví dụ ở Việt nam mở chi phí sẽ khác so với người ở Đài Loan mở. Nếu muốn được tư vấn chi tiết, có thể hẹn lịch họp online để tư vấn kỹ hơn.' }
                ],
                company: [
                    { q: 'Khoảng bao nhiêu tiền để em chuẩn bị?', a: 'Chi phí thủ tục giấy tờ khoảng 18-20 vạn đài tệ. Vốn đầu tư từ 50 vạn trở lên, càng cao càng dễ được thông qua.' },
                    { q: 'Mở công ty xong cần chi trả những loại phí gì? Bao nhiêu tiền?', a: 'Sau khi thành lập công ty, cần chi trả những chi phí cố định như: thuế, mặt bằng, bảo hiểm cho giám đốc. Khoảng 9,000 tệ/ tháng' },
                    { q: 'Có bảo lãnh được người thân không?', a: 'Có thể bảo lãnh vk-ck sang định cư lâu dài theo hạn cư trú của mình.' },
                    { q: 'Mở công ty xong có thể tuyển dụng người từ Việt Nam qua Đài không?', a: 'Phải là công ty môi giới mới được tuyển người từ Vn qua đài, tuy nhiên, có thể tuyển chức vị giám đốc cho công ty. Với điều kiện là sinh viên tốt nghiệp ở Đài Loan, có chuyên ngành phù hợp.' },
                    { q: 'Không có mặt bằng thì làm thế nào?', a: 'Có thể thuê 商業中心với mức phí khoảng 2,000 tệ/ tháng. Sau này có thể thay đổi địa chỉ' }
                ],
                status: [
                    { q: 'Thân phận là Lao động có thể làm giấy tờ mở công ty không?', a: 'Có, nhưng lưu ý nếu là dạng xkld sau này cần về việt nam làm lại Visa. Quá trình và giấy tờ làm visa bên công ty sẽ lo. Quan trọng chuẩn bị phần phỏng vấn với Đại sử quán Việt nam' },
                    { q: 'Bất hợp pháp có thể làm visa dạng này không?', a: 'Không' },
                    { q: 'Nếu ở Đài Loan, đi làm không đóng thuế, thì làm thế nào để chứng minh nguồn vốn minh bạch', a: 'Có nhiều cách khác nhau để chứng minh, sau này nếu quyết định làm, bên công ty sẽ hỗ trợ và hướng dẫn. Vì hiện nay, bên công ty mình có hỗ trợ nhiều trườngIPE hợp khác nhau và đều thông qua, nên không cần lo lắng quá' },
                    { q: 'Có bảo lãnh được lao động bất hợp pháp không?', a: 'Không' }
                ]
            };

            const faqCategoriesContainer = document.getElementById('faq-categories');
            const faqListContainer = document.getElementById('faq-list');

            function renderFAQs(category) {
                faqListContainer.innerHTML = '';
                faqData[category].forEach(item => {
                    const faqItem = document.createElement('div');
                    faqItem.className = 'faq-item';
                    faqItem.innerHTML = `<div class="faq-question">${item.q}</div><div class="faq-answer"><p>${item.a}</p></div>`;
                    faqListContainer.appendChild(faqItem);
                });
            }

            faqCategoriesContainer.addEventListener('click', (e) => {
                if (e.target.tagName === 'BUTTON') {
                    faqCategoriesContainer.querySelector('.active').classList.remove('active');
                    e.target.classList.add('active');
                    renderFAQs(e.target.dataset.category);
                }
            });

            faqListContainer.addEventListener('click', (e) => {
                 if (e.target.classList.contains('faq-question')) {
                    const currentActive = faqListContainer.querySelector('.faq-item.active');
                    const clickedItem = e.target.parentElement;
                    
                    if (currentActive && currentActive !== clickedItem) {
                        currentActive.classList.remove('active');
                    }
                    clickedItem.classList.toggle('active');
                 }
            });

            renderFAQs('general');

            // Disclaimer Modal
            const modal = document.getElementById('disclaimer-modal');
            const disclaimerLink = document.getElementById('disclaimer-link');
            const closeBtn = document.getElementById('modal-close-btn');

            disclaimerLink.addEventListener('click', (e) => {
                e.preventDefault();
                modal.style.display = 'block';
            });
            
            closeBtn.addEventListener('click', () => {
                modal.style.display = 'none';
            });
            
            window.addEventListener('click', (e) => {
                if (e.target == modal) {
                    modal.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>

