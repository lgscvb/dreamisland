    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile Menu Toggle
            const menuToggle = document.getElementById('menu-toggle');
            const mainNav = document.getElementById('main-nav');
            menuToggle.addEventListener('click', () => {
                mainNav.classList.toggle('active');
            });

            // --- Enhanced Tax Calculator Logic ---
            const salesExInput = document.getElementById('sales-exclusive');
            const taxInput = document.getElementById('tax-amount');
            const salesInInput = document.getElementById('sales-inclusive');
            const corpTaxResult = document.getElementById('corp-tax-result');

            let isCalculating = false;

            function formatNumber(num) {
                 // Use toLocaleString to add commas
                return num.toLocaleString('en-US', { maximumFractionDigits: 0 });
            }
            
            function cleanNumber(value) {
                // Remove commas for calculation
                return parseFloat(String(value).replace(/,/g, '')) || 0;
            }

            function calculateAll(sourceElement) {
                if (isCalculating) return;
                isCalculating = true;

                const sourceId = sourceElement.id;
                let salesEx = cleanNumber(salesExInput.value);
                
                if (sourceId === 'sales-exclusive') {
                    // Value from sales-exclusive input
                } else if (sourceId === 'tax-amount') {
                    salesEx = cleanNumber(taxInput.value) / 0.05;
                } else if (sourceId === 'sales-inclusive') {
                    salesEx = cleanNumber(salesInInput.value) / 1.05;
                }

                const tax = salesEx * 0.05;
                const salesIn = salesEx * 1.05;
                const corpTax = salesEx * 0.06 * 0.20;

                // Update values, avoiding update on the source element to prevent cursor jump
                if (sourceId !== 'sales-exclusive') salesExInput.value = formatNumber(Math.round(salesEx));
                if (sourceId !== 'tax-amount') taxInput.value = formatNumber(Math.round(tax));
                if (sourceId !== 'sales-inclusive') salesInInput.value = formatNumber(Math.round(salesIn));
                corpTaxResult.textContent = formatNumber(Math.round(corpTax));

                isCalculating = false;
            }
            
            [salesExInput, taxInput, salesInInput].forEach(input => {
                input.addEventListener('input', function() {
                    calculateAll(this);
                });
                
                input.addEventListener('focus', function() {
                   // When user focuses, remove commas for easier editing
                   this.value = cleanNumber(this.value) === 0 ? '' : cleanNumber(this.value);
                });

                input.addEventListener('blur', function() {
                    // When user leaves, format the number with commas
                    const numValue = cleanNumber(this.value);
                    this.value = formatNumber(numValue);
                    // Recalculate everything based on the final blurred value to ensure consistency
                    calculateAll(this);
                });
            });


            // Interactive FAQ
            const faqData = {
                general: [
                    { q: 'Thá»§ tá»¥c cáº§n chuáº©n bá»‹ giáº¥y tá» gÃ¬?', a: 'Giáº¥y tá» cáº§n chuáº©n bá»‹ bao gá»“m giáº¥y tá», kinh nghiá»‡m cÃ¡ nhÃ¢n vÃ  quan trá»ng nháº¥t lÃ  báº£n káº¿ hoáº¡ch kinh doanh thuyáº¿t phá»¥c vÃ  xá»©ng Ä‘Ã¡ng Ä‘á»ƒ Ä‘Æ°á»£c bá»™ kinh táº¿ cáº¥p phÃ©p má»Ÿ cÃ´ng ty. Tuy nhiÃªn, cÃ¡c thá»§ tá»¥c giáº¥y tá» bÃªn cÃ´ng ty Ä‘á»u há»— trá»£, nÃªn khÃ´ng cáº§n lo láº¯ng. Chá»‰ cáº§n phá»‘i há»£p Ä‘á»ƒ lÃ m lÃ  Ä‘Æ°á»£c.' },
